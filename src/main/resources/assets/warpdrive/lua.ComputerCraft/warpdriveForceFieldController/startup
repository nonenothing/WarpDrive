  w.setCursorPos(1, 14)
  w.setColorNormal()
  w.write("  -----------------------------------------------")
  
  w.setCursorPos(1, 15)
  w.setColorControl()
  w.writeFullLine(" Start/stoP all force field relays (S/P)")
  w.writeFullLine(" Configure (C) or togglE (E) selected relay")
  w.writeFullLine(" select force field relay (Up, Down)")
end

